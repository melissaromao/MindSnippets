<main
  class="p-5 bg-black text-white h-screen flex flex-col items-center justify-center"
>
  <h1 class="text-5xl font-bold text-gray-300 text-center py-6 opacity-80">
    O que você está pensando?
  </h1>
  <div class="max-w-2xl w-full">
    <hr class="border-gray-600 mb-6" />

    <div class="border border-gray-700 rounded-lg p-6 bg-gray-900">
      <form
        action="/rota_snippets/snippets/novo"
        method="POST"
        class="space-y-4"
      >
        <input
          type="text"
          id="insight"
          name="insight"
          placeholder="Escreva aqui o seu insight"
          class="w-full p-3 bg-gray-800 text-white rounded-lg placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500"
        />

        <button
          type="submit"
          class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-500"
        >
          <i class="fas fa-plus"></i>
        </button>
      </form>
    </div>
  </div>
</main>