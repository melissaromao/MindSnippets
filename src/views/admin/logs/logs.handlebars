<main class="p-5 bg-black text-white h-screen">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold">Lista de Logs</h2>
        <hr class="border-gray-600 my-4">

        <a href="/rota_logs/logs/add">
            <button class="px-4 py-2 bg-green-800 text-white rounded hover:bg-green-700">
                Novo Log
            </button>
        </a>

        {{#each logs}}
        <div class="mt-4 border border-gray-700 rounded-lg p-4 bg-gray-900">
            <h3 class="text-xl font-bold">{{titulo}}</h3> <!-- Destaca o título sem "Título:" -->
            <p class="text-sm text-gray-400">{{conteudo}}</p> <!-- Conteúdo mais apagado -->

            <div class="mt-3 flex space-x-2">
                <a href="/rota_logs/editar_logs/{{_id}}">
                    <button class="px-3 py-1 bg-gray-700 text-white rounded hover:bg-gray-600">
                        <i class="fas fa-edit"></i> <!-- Ícone de edição -->
                    </button>
                </a>
                <a href="/rota_logs/deletar_logs/{{_id}}">
                    <button class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-500">
                        <i class="fas fa-trash-alt"></i> <!-- Ícone de exclusão -->
                    </button>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</main>