<main class="p-5 bg-black text-white h-screen flex flex-col items-center justify-center">
    <div class="max-w-2xl w-full">
        <h2 class="text-3xl font-bold mb-4">Editar Insight</h2>
        <hr class="border-gray-600 mb-6">

        <div class="border border-gray-700 rounded-lg p-6 bg-gray-900">
            <form action="/rota_snippets/snippets/editar_snippets" method="POST" class="space-y-4">
                {{#if snippet}}
                <input type="text" id="_id" name="_id" readonly="true" value="{{snippet._id}}"
                    class="w-full p-3 bg-gray-800 text-white rounded-lg placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500">

                <input type="text" id="insight" name="insight" value="{{snippet.insight}}" placeholder="TÃ­tulo do snippet"
                    class="w-full p-3 bg-gray-800 text-white rounded-lg placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500">

                <button type="submit" class="w-full px-4 py-2 bg-green-800 text-white rounded-lg hover:bg-green-700">
                    <i class="fas fa-save"></i> 
                </button>
                {{/if}}
            </form>
        </div>
    </div>
</main>