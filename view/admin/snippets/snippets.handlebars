<main class="p-5 bg-black text-white h-screen">
<div class="max-w-4xl mx-auto space-y-4">
    <h2 class="text-3xl font-bold">Meus Insights</h2>
    <hr class="border-gray-600 my-4"><br>

    <a href="/rota_snippets/snippets/add">
        <button class="px-4 py-2 bg-green-800 text-white rounded hover:bg-green-700">
            Novo Insight
        </button>
    </a>

    {{#each snippets}}
    <div class="border border-gray-700 rounded-lg p-4 {{bgColor}}">
        <h3 class="text-xl font-bold">{{insight}}</h3>
        <div class="mt-3 flex space-x-2">
            <a href="/rota_snippets/editar_snippets/{{_id}}">
                <button class="px-3 py-1 text-white rounded hover:bg-yellow-900">
                    <i class="fas fa-edit"></i>
                </button>
            </a>
            <a href="/rota_snippets/deletar_snippets/{{_id}}">
                <button class="px-3 py-1 bg-white-700 text-white rounded hover:bg-red-900">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </a>
        </div>
    </div>
    {{/each}}
</div>
</main>